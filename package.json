{
  "name": "monitor-status",
  "version": "1.0.0",
  "description": "Monitor de disponibilidad web con Netlify Functions.",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest tests/unit tests/integration --ci --coverage --maxWorkers=2",
    "lint": "eslint . --ext .js,.html",
    "lint:fix": "eslint . --ext .js,.html --fix",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\""
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "abort-controller": "^3.0.0",
    "jest": "^29.7.0",
    "jsdom": "^23.0.0",
    "puppeteer": "^21.6.0"
  },
  "devDependencies": {
    "eslint": "^8.43.0",
    "prettier": "^2.8.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-html": "^7.1.0"
  }
}
